    <style>
        .collapsible {
            background-color: #808080;
            color: black;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: middle;
            outline: none;
            font-size: large;
        }

        .active, .collapsible:hover {
            color: #9370DB;
            background-color: #fff;
        }

        .collapsible:after {
            content: '\002B';

            font-weight: bold;
            float: right;
            margin-left: 5px;
        }

        .active:after {
            content: "\2212";
        }

        .content {
            padding: 0 18px;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
            color: black;
            background-color: #f1f1f1;
        }
    </style>


